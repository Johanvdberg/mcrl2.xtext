module test.reflang.dsl.GenerateRefDsl

import org.eclipse.xtext.xtext.generator.*
import org.eclipse.xtext.xtext.generator.model.project.*

var rootPath = ".."

Workflow {

	component = XtextGenerator {
		configuration = {
			project = StandardProjectConfig {
				baseName = "test.reflang.dsl"
				rootPath = rootPath
				eclipsePlugin = {
					enabled = true
				}
				createEclipseMetaData = true
			}
			code = {
				encoding = "UTF-8"
				lineDelimiter = "\n"
				fileHeader = "/*\n * generated by Xtext \${version}\n */"
			}
		}
		language = StandardLanguage {
			name = "test.reflang.dsl.RefDsl"
			fileExtensions = "ref"
			generateXtendStubs = true
			referencedResource = "platform:/resource/test.multiname.dsl/model/generated/MultiNameDsl.genmodel"
			fragment = scoping.ImportNamespacesScopingFragment2 auto-inject {}
			serializer = {
				generateStub = false
			}
			validator = {
			// composedCheck = "org.eclipse.xtext.validation.NamesAreUniqueValidator"
			}
		}
	}
}
